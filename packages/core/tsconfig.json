{
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"declaration": true,
		"lib": [
			"es2015",
			"dom"
		],
		"sourceMap": true,
		"mapRoot": "./",
		"module": "es2015",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "./dist/build",
		"rootDir": ".",
		"target": "es5",
		"inlineSources": true,
		"types": [
			"node",
			"jasmine"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./custom.d.ts"
		]
	},
	"exclude": [
		"./src/**/*.spec.ts",
		"./src/tests",
		"./node_modules",
		"../../node_modules"
	],
	"references": [
		{ "path": "src" },
		{ "path": "demo" }
	],
	"files": []
}
