{
	"name": "@carbon/charts-monorepo",
	"description": "Carbon charting components, lerna monorepo",
	"repository": {
		"type": "git",
		"url": "git@github.com:IBM/carbon-charts.git"
	},
	"keywords": [
		"charts"
	],
	"author": "IBM",
	"license": "Apache-2.0",
	"scripts": {
		"commit": "git-cz",
		"postinstall": "lerna bootstrap --hoist `if [ $CI ] ; then echo \"--ci\" ; fi`",
		"pre-push": "bash scripts/prepush.sh",
		"test": "lerna run test",
		"lint": "eslint packages"
	},
	"engines": {
		"npm": "5.6.0"
	},
	"release": {
		"branch": "master"
	},
	"devDependencies": {
		"commitizen": "2.10.1",
		"cz-conventional-changelog": "2.1.0",
		"husky": "^1.1.2",
		"lerna": "3.2.1"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"maintainers": [
		{
			"name": "Eliad Moosavi",
			"email": "iliadm@ca.ibm.com"
		}
	]
}
